{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@proj/dta-impl": ["packages/dta-impl/dist"],
      "@proj/mcp-impl": ["packages/mcp-impl/dist"],
      "@proj/mcp-server": ["packages/mcp-server/dist"]
    }
  }
}
