{
  "name": "mcp-vs-dta",
  "build": { "dockerfile": "Dockerfile" },
  "runArgs": ["--cap-add=NET_ADMIN"],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash",
    "editor.formatOnSave": true
  },
  "postCreateCommand": "pnpm i",
  "postStartCommand": "sudo mkdir -p /home/vscode/.config/gh && sudo chown -R vscode:vscode /home/vscode/.config/gh",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,

  // 1) Install GitHub CLI inside the container
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // 2) Persist your gh auth token across rebuilds (local to your machine)
  "mounts": [
    "source=gh-config,target=/home/vscode/.config/gh,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
